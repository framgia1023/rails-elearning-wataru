<div class="row">
	<div class="col-lg-6 offset-1">
		<h1>Admin/Categories Words</h1>
	</div>
	<div class="col-lg-2 offset-2 mx-5">
		<%= link_to "Back", admin_categories_path, class: "btn btn-outline-primary btn-block" %>
	</div>
</div>
	

<div class="row">	
	<table class="table table-striped mx-5">
	  <thead>
	  	<tr>
	      <th scope="col">Word</th>
	      <th scope="col">Answer</th>
	      <th scope="col">Action</th>
	    </tr>
	  </thead>

	   <tbody>

		<% @words.each do |word| %>
	    <tr>
	      <th scope="row"><%= link_to word.content, admin_category_words_path(@category.id), class: "" %></th>
	  
		  <td><%=  word.correct_params.content %></td>
	      
	      <td>
	      	<%= link_to "Edit", edit_admin_category_word_path(@category.id, word.id), class: "btn btn-outline-success btn-block" %>
			<%= link_to "Remove", admin_category_word_path(@category.id, word.id), method: :delete, class: "btn btn-outline-danger btn-block" %>
	      </td>
	    </tr>
	  	<% end %>
	  </tbody>
	</table>






	<div class="container paginate text-center">
		<%= will_paginate %>
	</div>
</div>