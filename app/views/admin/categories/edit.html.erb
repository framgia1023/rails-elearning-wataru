<div class="row">
	<div class="col-lg-6 offset-1">
		<h1>Edit Category</h1>
	</div>
	<div class="col-lg-2 offset-2 mx-5">
		<%= link_to "back", admin_categories_path, class: "btn btn-outline-primary btn-block" %>
	</div>
</div>
<div class="mx-5">
	<%= form_for [:admin, @category] do |c| %>

		<div class="form-group">
			<%= c.label :title %>
			<%= c.text_field :title, class: "form-control", placeholder: "Enter new title" %>
		</div>

		<div class="form-group">
			<%= c.label :description %>
			<%= c.text_field :description, class: "form-control", placeholder: "Enter description" %>
		</div>

		<div class="form-group">
			<%= c.submit "Update" ,class: "btn btn-success btn-block"%>
		</div>

	<% end %>
</div>